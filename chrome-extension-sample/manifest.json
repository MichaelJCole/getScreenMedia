{
  "name": "bigSmall.io Chrome Screensharing",
  "description": "bigSmall.io Screensharing extension made for Chrome browsers",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
  },
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [ {
    "js": [ "content.js" ],
    "matches": [
      "https://*.bigsmall.io/*",
      "https://*.bigsmall.dev/*"
    ]
  }],
  "externally_connectable": {
    "matches": [
      "https://*.bigsmall.io/*",
      "https://*.bigsmall.dev/*"
    ]
  }
}
